<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Bot Chat</title>
    <link href="https://cdn.botframework.com/botframework-webchat/latest/botchat.css" rel="stylesheet" />
    <style>
      .example {
        float: left;
        margin-right: 20px;
        width: 300px;
      }

      .example > h2 {
        font-family: 'Segoe UI';
      }

      #BotChatGoesHere {
        border: 1px solid #333;
        float: left;
        height: 600px;
        position: relative;
        width: 460px;
      }
    </style>
  </head>
  <body>

    <div id="BotChatGoesHere"></div>
    <!-- changed to es5 version to add polyfills for IE support -->
    <script src="https://cdn.botframework.com/botframework-webchat/latest/botchat-es5.js"></script>
    <!--<script src="https://cdn.botframework.com/botframework-webchat/latest/botchat.js"></script> -->
    
    <!-- If you do not want to use Cognitive Services library, comment out the following line -->
    <script src="https://cdn.botframework.com/botframework-webchat/latest/CognitiveServices.js"></script>
    <script>

    const params = BotChat.queryParams(location.search);
    // TODO: Change values after || to actual Bot ID and Bot Name (optional)
    const bot = {
      id: params['botid'] || 'Bot ID',
      name: params['botname'] || 'Bot Name'
    };

    const user = {
        id: '<%= userId %>',
        // TODO: Change values after || to another value if wanted.
        name: params['username'] || 'Anonymous'
      };

  	BotChat.App({
    bot: bot,
    locale: params['locale'],
    resize: 'detect',
    user: user,

    directLine: {
      secret: '<%= token %>',
      webSocket: params['webSocket'] && params['webSocket'] === 'false' // defaults to true
    }
  	}, document.getElementById('BotChatGoesHere'));

    </script>
  </body>
</html>
